<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <com.scrop.view.ballview.SelBallView
        android:id="@+id/id_sbv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:textAlignment="center"
        android:textSize="17dp"
        app:snum="0"
        android:textColor="@drawable/item_ball_textcolor_sel"
        app:ballColor="@drawable/item_ball_bg_sel"/>
    <TextView
        android:id="@+id/id_tv_omit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_num_placeholder"
        android:textAlignment="center" />
</LinearLayout>
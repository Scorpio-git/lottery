<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text="@string/str_placeholder"
                style="@style/TextRecyclerItemBoldBig"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_placeholder"
                style="@style/TextRecyclerItemNormal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_placeholder"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                style="@style/TextRecyclerItemNormal"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_ll_ball"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">
            <com.scrop.view.ballview.MyBallView
                android:id="@+id/id_myball_0"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:text="@string/str_num_placeholder"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="30dip"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:src="@mipmap/img_next"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_balance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.scrop.hall.BalanceActivity">
    <com.scrop.navi.NaviLayout
        android:id="@+id/id_navi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_balance"
        app:backHidden="false">
    </com.scrop.navi.NaviLayout>
    <LinearLayout
        android:id="@+id/id_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/id_navi">
        <TextView
            android:id="@+id/id_tv_issue"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/str_placeholder"
            android:gravity="center_vertical"
            android:layout_below="@+id/id_navi"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/id_tv_timer"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/str_placeholder"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            android:layout_below="@+id/id_navi"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_ll_1"
        android:orientation="vertical"
        android:background="@color/colorLightGray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/id_ll_1">
            <Button
                android:id="@+id/id_btn_custom_sn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonTintWhite"
                android:text="@string/str_customer_selnums"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/id_btn_random_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonTintWhite"
                android:text="@string/str_random_one_stakes"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/id_btn_clear_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ButtonTintWhite"
                android:text="@string/str_clean_list"
                android:drawableLeft="@mipmap/img_del"
                android:layout_weight="1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_circular_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/shape_circular_tophalf_gray"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/id_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite">
                </android.support.v7.widget.RecyclerView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@drawable/bitmap_background_balance" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@color/colorBlueGray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_chase"/>
                    <EditText
                        android:id="@+id/id_et_issue"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        style="@style/EditTextForSingleLineNum"
                        android:background="@drawable/shape_border_round_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_term"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_bet"/>
                    <EditText
                        android:id="@+id/id_et_times"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:textAlignment="center"
                        style="@style/EditTextForSingleLineNum"
                        android:background="@drawable/shape_border_round_white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_times"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_bet_count"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/id_tv_bet_count"
                    android:text="@string/str_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/id_btn_sure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ButtonNormal"
                    android:layout_marginRight="10dp"
                    android:text="@string/str_sure"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
